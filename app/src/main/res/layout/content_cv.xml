<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="ys.cvapp.Cv"
    tools:showIn="@layout/activity_cv">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin"
        android:id="@+id/txtWhoAmI"
        android:text="@string/txtWhoAmI" />



    <TextView
        android:id="@+id/txtGegevens"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="4dp"
        android:background="@color/colorAccent"
        android:textStyle="bold"
        android:textAlignment="center"
        android:text="Persoonsgegegevens" />

<TableLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="16dp"
    android:layout_marginLeft="16dp">


    <TableRow>
        <TextView
            android:text="Naam:"
            android:padding="3dip" />
        <TextView
            android:text="Servranckx Yannick"
            android:gravity="right"
            android:layout_gravity="right"
            android:padding="3dip"
            android:layout_weight="1" />
    </TableRow>

    <TableRow>
        <TextView
            android:text="Telefoon:"
            android:padding="3dip" />
        <TextView
            android:text="0478/35.81.69 "
            android:gravity="right"
            android:layout_gravity="right"
            android:padding="3dip"
            android:layout_weight="1"/>
    </TableRow>

    <TableRow>
        <TextView
            android:text="Emailadres:"
            android:padding="3dip" />
        <TextView
            android:text="yannick.servranckx@hotmail.com "
            android:gravity="right"
            android:layout_gravity="right"
            android:padding="3dip"
            android:layout_weight="1"/>
    </TableRow>

    <TableRow>
        <TextView
            android:text="Woonplaats:"
            android:padding="3dip" />
        <TextView
            android:text="9320, Erembodegem-Terjoden"
            android:gravity="right"
            android:layout_gravity="right"
            android:padding="3dip"
            android:layout_weight="1"/>
    </TableRow>

</TableLayout>

    <TextView
        android:id="@+id/txtOpleidingen"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="4dp"
        android:background="@color/colorAccent"
        android:textStyle="bold"
        android:textAlignment="center"
        android:text="Opleiding" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/alternateLvCourses"
        android:orientation="vertical"/>

    <TextView
        android:id="@+id/txtErvaring"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="4dp"
        android:background="@color/colorAccent"
        android:textStyle="bold"
        android:textAlignment="center"
        android:text="Werkervaring" />

    <TextView
        android:id="@+id/txtSkills"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="4dp"
        android:background="@color/colorAccent"
        android:textStyle="bold"
        android:textAlignment="center"
        android:text="Vaardigheden" />

    <TextView
        android:id="@+id/txtExtra"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="4dp"
        android:background="@color/colorAccent"
        android:textStyle="bold"
        android:textAlignment="center"
        android:text="Extra" />

</LinearLayout>



</android.support.v4.widget.NestedScrollView>




